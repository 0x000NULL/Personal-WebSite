{
  "name": "@portfolio/websocket-server",
  "version": "1.0.0",
  "private": true,
  "description": "Portfolio website WebSocket server - Real-time communication",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "lint": "eslint src/ --ext .ts",
    "typecheck": "tsc --noEmit",
